{% extends 'Dashboard/baseAdmin.html.twig' %}


{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-2">
    <h1>Listes des utilisateurs</h1>
    {# <a href="{{ path('app_admin_user_new') }}">Nouveau</a> #}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Code_postal</th>
                <th>Num_telephone</th>
                <th>Sexe</th>
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.numTelephone }}</td>
                <td>{{ user.sexe }}</td>
                {# <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
